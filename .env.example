# Midnight MCP Server Environment Variables
# Copy this file to .env for local development

# Wallet seed (required)
# This is a 32-byte hex string (64 characters) used to initialize your wallet
# You can generate a new seed using the included script:
#   yarn generate-seed
# Keep your seed secure and backed up!
SEED=your_seed_here

# Network ID (optional, defaults to TestNet)
# Options: MainNet, TestNet, DevNet
NETWORK_ID=TestNet

# Wallet Configuration
WALLET_FILENAME=midnight-wallet
WALLET_BACKUP_FOLDER=wallet-backups

# External Proof Server Configuration
# Set to true to use an external proof server instead of starting one internally
USE_EXTERNAL_PROOF_SERVER=false
# Required when USE_EXTERNAL_PROOF_SERVER=true
PROOF_SERVER=http://proof-server:6300
INDEXER=https://indexer.testnet-02.midnight.network/api/v1/graphql
INDEXER_WS=wss://indexer.testnet-02.midnight.network/api/v1/graphql/ws
NODE=https://rpc.testnet-02.midnight.network

# Docker Compose Configuration
MCP_PORT=3000
PROOF_SERVER_PORT=6300

# Logging Configuration
LOG_LEVEL=info

# API Authentication Configuration
# This API key is required for all operations except basic status checks
# For production, generate a secure key with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_KEY=your_secure_api_key_here 